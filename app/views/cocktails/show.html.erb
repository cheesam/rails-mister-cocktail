<br>
<div class="container">

  <div>
    <%= link_to "Back", cocktails_path %>
  </div>

  <div>
    <div>
      <div>
        <div>
          <h2><%=  @cocktail.name.capitalize %></h2>

          <% if @cocktail.photo.present? %>
            <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
          <% else %>
            <img src="https://www.bbcgoodfood.com/sites/default/files/guide/guide-image/2012/08/cocktail-selection.jpg" alt="Default cocktail photo">
          <% end %>

        </div>
        <p><strong>Ingredients</strong></p>
        <% @cocktail.doses.each do |dose|  %>
          <div>
            <p><%= dose.description %> of <%= dose.ingredient.name %></p>
            <%= link_to "ðŸ—‘", dose_path(dose), method: :delete %>
          </div>
        <% end %>
        <%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail) %>
        <br>
        <%= link_to "Edit cocktail name", edit_cocktail_path %>

      </div>
    </div>
  </div>

</div>
